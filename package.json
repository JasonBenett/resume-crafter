{
  "name": "resume-crafter",
  "version": "1.0.0",
  "description": "A modern static website generator for creating beautiful, professional resume websites from YAML configuration files",
  "main": "src/index.js",
  "bin": {
    "resume-crafter": "./src/cli.js"
  },
  "scripts": {
    "build": "node src/cli.js build -c examples/basic/resume.yaml",
    "dev": "chokidar 'src/**/*.js' 'themes/**/*' 'examples/**/*.yaml' -c 'npm run build'",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\" \"themes/**/*.{html,css,js}\"",
    "format:check": "prettier --check \"src/**/*.js\" \"themes/**/*.{html,css,js}\"",
    "test": "echo \"Tests will be added in Phase 8\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JasonBenett/resume-crafter.git"
  },
  "keywords": [
    "resume",
    "cv",
    "static-site-generator",
    "yaml",
    "handlebars",
    "tailwind",
    "portfolio",
    "i18n",
    "themes"
  ],
  "author": "Resume Crafter (Created with Claude Code)",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/JasonBenett/resume-crafter/issues"
  },
  "homepage": "https://github.com/JasonBenett/resume-crafter#readme",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.22",
    "commander": "^14.0.2",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "fs-extra": "^11.3.2",
    "prettier": "^3.6.2"
  }
}
