<section class="languages">
  <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b-2 border-primary-500 pb-2">
    {{t "sections.languages"}}
  </h2>

  <div class="grid grid-cols-2 gap-4">
    {{#each languages}}
      <div class="flex items-center justify-between bg-gray-50 p-3 rounded-lg">
        <span class="font-medium text-gray-900">{{this.language}}</span>
        <span class="text-sm text-primary-600 capitalize">{{this.proficiency}}</span>
      </div>
    {{/each}}
  </div>
</section>
