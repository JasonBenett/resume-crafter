<section class="experience">
  <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b-2 border-primary-500 pb-2">
    {{t "sections.experience"}}
  </h2>

  <div class="space-y-6">
    {{#each experience}}
      <div class="experience-item">
        <div class="flex justify-between items-start mb-2">
          <div>
            <h3 class="text-xl font-semibold text-gray-900">{{this.position}}</h3>
            <p class="text-lg text-primary-600">{{this.company}}</p>
          </div>
          <div class="text-right text-sm text-gray-600">
            <p>{{formatDate this.startDate}} - {{formatDate this.endDate}}</p>
            {{#if this.location}}
              <p>{{this.location}}</p>
            {{/if}}
          </div>
        </div>

        {{#if this.description}}
          <p class="text-gray-700 mb-2">{{this.description}}</p>
        {{/if}}

        {{#if this.tasks}}
          <ul class="list-disc list-inside space-y-1 text-gray-700 ml-2">
            {{#each this.tasks}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
        {{/if}}

        {{#if this.technologies}}
          <div class="mt-3 flex flex-wrap gap-2">
            {{#each this.technologies}}
              <span class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm">{{this}}</span>
            {{/each}}
          </div>
        {{/if}}
      </div>
    {{/each}}
  </div>
</section>
