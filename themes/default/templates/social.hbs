<section class="social">
  <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b-2 border-primary-500 pb-2">
    {{t "sections.social"}}
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {{#each social}}
      <a href="{{this.url}}"
         target="_blank"
         rel="noopener noreferrer"
         class="flex items-center justify-between bg-gray-50 hover:bg-primary-50 p-4 rounded-lg transition-colors no-print">
        <div>
          <p class="font-medium text-gray-900">{{this.platform}}</p>
          {{#if this.username}}
            <p class="text-sm text-gray-600">{{this.username}}</p>
          {{/if}}
        </div>
        <span class="text-primary-600">â†’</span>
      </a>
    {{/each}}
  </div>
</section>
