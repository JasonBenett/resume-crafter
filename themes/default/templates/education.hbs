<section class="education">
  <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b-2 border-primary-500 pb-2">
    {{t "sections.education"}}
  </h2>

  <div class="space-y-6">
    {{#each education}}
      <div class="education-item">
        <div class="flex justify-between items-start mb-2">
          <div>
            <h3 class="text-xl font-semibold text-gray-900">{{this.degree}}</h3>
            {{#if this.field}}
              <p class="text-gray-700">{{this.field}}</p>
            {{/if}}
            <p class="text-lg text-primary-600">{{this.institution}}</p>
          </div>
          <div class="text-right text-sm text-gray-600">
            {{#if this.startDate}}
              <p>{{formatDate this.startDate}}{{#if this.endDate}} - {{formatDate this.endDate}}{{/if}}</p>
            {{/if}}
            {{#if this.location}}
              <p>{{this.location}}</p>
            {{/if}}
          </div>
        </div>

        {{#if this.gpa}}
          <p class="text-gray-700">GPA: {{this.gpa}}</p>
        {{/if}}

        {{#if this.honors}}
          <p class="text-gray-700 font-medium">{{this.honors}}</p>
        {{/if}}

        {{#if this.description}}
          <p class="text-gray-700 mt-2">{{this.description}}</p>
        {{/if}}
      </div>
    {{/each}}
  </div>
</section>
