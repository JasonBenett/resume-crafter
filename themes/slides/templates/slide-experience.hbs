<section class="slide slide-experience" data-gradient="2">
  <div class="slide-content">
    <h2 class="slide-title">{{t "sections.experience"}}</h2>

    <div class="timeline">
      {{#each experience}}
        <div class="timeline-item">
          <div class="timeline-header">
            <h3 class="timeline-title">{{this.position}}</h3>
            <p class="timeline-company">{{this.company}}</p>
            <p class="timeline-date">{{formatDate this.startDate}} - {{formatDate this.endDate}}</p>
            {{#if this.location}}
              <p class="timeline-location">{{this.location}}</p>
            {{/if}}
          </div>

          {{#if this.description}}
            <p class="timeline-description">{{this.description}}</p>
          {{/if}}

          {{#if this.tasks}}
            <ul class="timeline-tasks">
              {{#each this.tasks}}
                <li>{{this}}</li>
              {{/each}}
            </ul>
          {{/if}}

          {{#if this.technologies}}
            <div class="timeline-tech">
              {{#each this.technologies}}
                <span class="tech-badge">{{this}}</span>
              {{/each}}
            </div>
          {{/if}}
        </div>
      {{/each}}
    </div>
  </div>
</section>
