<section class="slide slide-contact" data-gradient="5">
  <div class="slide-content">
    <h2 class="slide-title">{{t "sections.contact"}}</h2>

    <div class="contact-container">
      <div class="contact-info">
        {{#if profile.email}}
          <a href="mailto:{{profile.email}}" class="contact-item">
            <svg class="contact-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
            <span>{{profile.email}}</span>
          </a>
        {{/if}}

        {{#if profile.phone}}
          <a href="tel:{{profile.phone}}" class="contact-item">
            <svg class="contact-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            <span>{{profile.phone}}</span>
          </a>
        {{/if}}

        {{#if profile.city}}
          <div class="contact-item">
            <svg class="contact-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span>{{profile.city}}{{#if profile.country}}, {{profile.country}}{{/if}}</span>
          </div>
        {{/if}}

        {{#if profile.website}}
          <a href="{{profile.website}}" target="_blank" rel="noopener noreferrer" class="contact-item">
            <svg class="contact-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <line x1="2" y1="12" x2="22" y2="12"/>
              <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
            </svg>
            <span>{{profile.website}}</span>
          </a>
        {{/if}}
      </div>

      {{#if social}}
        <div class="social-links">
          <h3 class="social-title">{{t "sections.social"}}</h3>
          <div class="social-grid">
            {{#each social}}
              <a href="{{this.url}}" target="_blank" rel="noopener noreferrer" class="social-card">
                <span class="social-platform">{{this.platform}}</span>
                {{#if this.username}}
                  <span class="social-username">@{{this.username}}</span>
                {{/if}}
              </a>
            {{/each}}
          </div>
        </div>
      {{/if}}
    </div>
  </div>
</section>
